<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.activities.InicioActivity">

    <ImageView
        android:id="@+id/actinicio_imv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <EditText
        android:id="@+id/actinicio_edt_dni"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:maxLength="8"
        android:hint="@string/actinicio_edt_dni"
        android:layout_marginTop="60dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actinicio_imv_logo"
        />

    <EditText
        android:id="@+id/actinicio_edt_digito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/actinicio_edt_digito"
        android:layout_marginTop="30dp"
        android:inputType="number"
        android:maxLength="1"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/actinicio_edt_dni"
        />

    <EditText
        android:id="@+id/actinicio_edt_fechaemision"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/actinicio_edt_fechaemision"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:inputType="date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/actinicio_edt_digito"
        />

    <Button
        android:id="@+id/actinicio_btn_verificar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/actinicio_btn_verificar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
        android:onClick="onClicVerificar"
        app:layout_constraintTop_toBottomOf="@id/actinicio_edt_fechaemision"
        />

</androidx.constraintlayout.widget.ConstraintLayout>